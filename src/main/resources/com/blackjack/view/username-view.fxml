<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button ?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="20" alignment="CENTER"
      xmlns="http://javafx.com/javafx/17"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.blackjack.view.UsernameController">

    <Label text="BLACKJACK" fx:id="gameLabel"/>
    <Label text="Enter your username" />
    <Label fx:id="errorLabel" text=""
           visible="false"
           style="-fx-text-fill: red; -fx-font-size: 16px;"/>

    <TextField fx:id="usernameField" />
    <Button text="Continue" onAction="#onContinue"/>
    <Button text="Exit" onAction="#onExit"/>

</VBox>