<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<VBox spacing="15" alignment="TOP_CENTER"
      xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.blackjack.view.GameController">

    <Label text="Blackjack" style="-fx-font-size: 22px;"/>

    <!-- Anzeigen -->
    <Label fx:id="playerScoreLabel" text="Player: 0"/>
    <Label fx:id="dealerScoreLabel" text="Dealer: ?"/>
    <Label fx:id="creditsLabel" text="Credits: 1000"/>

    <Button text="Start Round" onAction="#onStartRound"/>

    <!-- Buttons -->
    <HBox spacing="10" alignment="CENTER">
        <Button text="Hit" onAction="#onHit"/>
        <Button text="Stand" onAction="#onStand"/>
        <Button text="Double Down" onAction="#onDoubleDown"/>
    </HBox>

    <Button text="Back" onAction="#onBack"/>
</VBox>